<UserControl x:Class="KnapsackDemo.GoodView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KnapsackDemo"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <StackPanel>
        <Label FontSize="20"  FontWeight="Bold" x:Name="name">NULL</Label>

        <StackPanel Orientation="Horizontal">
            <Label Width="60" FontWeight="Bold">价值：</Label>
            <Label Name="value"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="60" FontWeight="Bold">重量：</Label>
            <Label Name="weight"></Label>
        </StackPanel>
         
    </StackPanel>
</UserControl>
